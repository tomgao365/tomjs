{
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@8.7.5",
  "scripts": {
    "build": "pnpm --filter=@tomjs/* -r --stream build",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint \"packages/**/*.{js,cjs,ts}\" *.{js,cjs,ts} --fix --cache --ignore-path .gitignore",
    "lint:prettier": "prettier --write \"packages/**/*.{js,cjs,ts,json,md}\" *.{js,cjs,ts,json,md}"
  },
  "devDependencies": {
    "@tomjs/eslint": "workspace:^",
    "@tomjs/prettier": "workspace:^",
    "@tomjs/tsconfig": "workspace:^",
    "@types/node": "^16.18.50",
    "eslint": "^8.49.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-build": "^0.10.0"
  }
}
