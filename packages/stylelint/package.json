{
  "name": "@tomjs/stylelint",
  "version": "1.0.0",
  "description": "stylelint config for tomjs",
  "keywords": [
    "lint",
    "stylelint",
    "style",
    "css",
    "less",
    "scss"
  ],
  "author": {
    "name": "tom",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomgao365/tomjs.git",
    "directory": "packages/stylelint"
  },
  "files": [
    "es",
    "lib",
    "*.md"
  ],
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.js",
      "types": "./es/index.d.ts"
    },
    "./vue": {
      "require": "./lib/vue.js",
      "import": "./es/vue.js",
      "types": "./es/vue.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "rimraf ./es ./lib"
  },
  "dependencies": {
    "postcss": "^8.4.29",
    "postcss-html": "^1.5.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.8",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-prettier": "^4.0.2"
  },
  "peerDependencies": {
    "prettier": ">=3.0.0",
    "stylelint": "^15.10.0"
  },
  "engines": {
    "node": ">=16"
  }
}
